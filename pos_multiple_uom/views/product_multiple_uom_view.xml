<odoo>
    <record id="product_multi_uom_price_form_view" model="ir.ui.view">
        <field name="name">product.multi.uom.price.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']" position="inside">
                <div>
                    <field name="x_multi_uom_ok"/>
                    <label for="x_multi_uom_ok"/>
                </div>
            </xpath>
            <xpath expr="//page[@name='pos']" position="inside">
                <div name="uom_price" attrs="{'invisible': [('x_multi_uom_ok', '=', False)]}" groups="uom.group_uom">
                    <label for="x_price_uom_ids"/>
                    <field name="x_price_uom_ids" context="{'x_product_id': id}">
                        <tree editable="bottom">
                            <field name="x_uom_id"/>
                            <field name="x_qty"/>
                            <field name="x_product_id" invisible="1"/>
                            <field name="x_price"/>
                        </tree>
                    </field>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
