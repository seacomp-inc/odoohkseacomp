<odoo>
	<record id="view_task_form_inherit_seacomp" model="ir.ui.view">
            <field name="name">project.task.form</field>
            <field name="model">project.task</field>
            <field eval="2" name="priority"/>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
            	<field name="date_deadline" position="before">
            		<field name="starting_date" attrs="{'readonly': [('dependent_task_ids','!=',[])]}"/>
                        <field name="expected_duration" />
            		<field name="expected_completion" readonly="1"/>
            	</field>

            	<xpath expr="//notebook" position="inside">
            		<page name="dependent_tasks" string="Depend on Tasks">
            			<group>
        					<field name="dependent_task_ids">
            				  <tree editable="bottom" domain="[('project_id','=',parent.project_id)]">
            				    <field name="name" readonly="1"/>
            				    <field name="project_id" readonly="1"/>
            				    <field name="user_id" readonly="1"/>
            				    <field name="starting_date" readonly="1"/>
                                        <field name="expected_duration" readonly="1"/>
            				    <field name="expected_completion" readonly="1"/>
            				    <field name="stage_id" readonly="1"/>
            				  </tree>
            				</field>
            			</group>
            		</page>
            	</xpath>	
            </field>
    </record>
</odoo>