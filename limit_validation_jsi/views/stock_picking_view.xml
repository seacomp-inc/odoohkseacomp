<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_picking_form_limit_validation_jsi" model="ir.ui.view">
            <field name="name">view.picking.form.limit.validation.jsi</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="quality_control.stock_picking_view_form_inherit_quality"/>
            <field name="arch" type="xml">
                <h1 position="before">
                    <field name="remaining_credit" invisible="1"/>
                    <field name="is_overdue_limit_end" invisible="1"/>
                    <div attrs="{'invisible': [('state', 'in', ('done', 'cancel'))]}">
                        <div class="alert alert-danger" role="alert" style="margin-bottom:0px;"
                            attrs="{'invisible': ['|', ('partner_id', '=', False), ('remaining_credit', '>', 0)]}">
                            <strong>This customer is over credit limit. To proceed, please contact Mike.</strong>
                        </div>
                        <div class="alert alert-danger" role="alert" style="margin-bottom:0px;"
                            attrs="{'invisible': [('is_overdue_limit_end', '=', False)]}">
                            <strong>The AR for this customer are overdue. To proceed, please contact Mike.</strong>
                        </div>
                    </div>
                </h1>
            </field>
        </record>
    </data>
</odoo>
