<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_limit_validation_jsi" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.limit.validation.jsi</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='sale_config_online_confirmation_pay']" position="after">
                <div class="col-lg-6 col-12 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="use_overdue_limit"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="use_overdue_limit"/>
                        <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." role="img" aria-label="Values set here are company-specific." groups="base.group_multi_company"/>
                        <div class="text-muted">
                            Prevent users from validating SO and transfers from partners who are overdue over the folloving amount of days
                         </div>
                         <div class="content-group" attrs="{'invisible': [('use_overdue_limit','=',False)]}">
                            <div class="mt16" >
                                <field name="allowed_overdue_limit_days" class="oe_inline"/> days
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
